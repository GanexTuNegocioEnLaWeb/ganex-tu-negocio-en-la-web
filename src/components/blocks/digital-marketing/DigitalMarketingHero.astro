---
import { t } from "../../../lib/i18n";
const { i18n = {} } = Astro.props as { i18n?: Record<string, any> };
const title = t("digital.hero.title", i18n);
const lead = t("digital.hero.lead", i18n);
const h2 = t("digital.hero.h2", i18n);
const p1 = t("digital.hero.p1", i18n);
const li1 = t("digital.hero.li1", i18n);
const li2 = t("digital.hero.li2", i18n);
const li3 = t("digital.hero.li3", i18n);
const cta = t("digital.hero.cta", i18n);
const lang = i18n.locale || "es";
---

<main class="max-w-6xl mx-auto px-4 py-20 text-neutral-800 bg-white">
  <h1
    class="text-6xl md:text-7xl font-extrabold mb-10 text-center text-[#FF8A00] tracking-tight"
  >
    {title}
  </h1>
  <p class="text-xl text-center max-w-3xl mx-auto mb-16">
    {lead}
  </p>

  <div class="grid md:grid-cols-2 gap-12 items-center">
    <img
      src="/images/services/marketing-digital.jpg"
      alt={title}
      class="object-cover w-full h-full rounded-2xl"
    />

    <div class="space-y-6 order-1 md:order-2">
      <h2 class="text-3xl font-bold text-neutral-800">
        {h2}
      </h2>
      <p class="text-neutral-600 leading-relaxed">
        {p1}
      </p>
      <ul class="space-y-3">
        <li class="flex items-center gap-3">
          <svg
            class="w-6 h-6 text-[#FF8A00]"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M5 13l4 4L19 7"></path></svg
          >
          <span class="text-neutral-700">{li1}</span>
        </li>
        <li class="flex items-center gap-3">
          <svg
            class="w-6 h-6 text-[#FF8A00]"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M5 13l4 4L19 7"></path></svg
          >
          <span class="text-neutral-700">{li2}</span>
        </li>
        <li class="flex items-center gap-3">
          <svg
            class="w-6 h-6 text-[#FF8A00]"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M5 13l4 4L19 7"></path></svg
          >
          <span class="text-neutral-700">{li3}</span>
        </li>
      </ul>
      <p class="text-neutral-600 leading-relaxed">
        Integramos campañas con tu <a
          href="/servicios/desarrollo-web"
          class="text-[#FF8A00] font-medium hover:underline"
          >sitio web optimizado</a
        > y <a
          href="/servicios/optimizacion-seo"
          class="text-[#FF8A00] font-medium hover:underline">SEO</a
        > para potenciar la <strong>visibilidad</strong> y el <strong
          >posicionamiento</strong
        > orgánico y de pago.
      </p>
      <div class="pt-6">
        <a
          href={lang === "es"
            ? "/es/empezar/marketing"
            : "/en/get-started/marketing"}
          class="inline-flex items-center gap-2 px-8 py-4 bg-[#FF8A00] text-white font-bold rounded-full hover:scale-105 active:scale-95 transition-all shadow-lg shadow-orange-200"
        >
          {cta}
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            ><path
              d="M13 7l5 5m0 0l-5 5m5-5H6"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"></path></svg
          >
        </a>
      </div>
    </div>
  </div>
</main>
