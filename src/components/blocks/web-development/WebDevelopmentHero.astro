---
import { t } from "../../../lib/i18n";
const { i18n = {} } = Astro.props as { i18n?: Record<string, any> };
const title = t("webdev.hero.title", i18n);
const lead = t("webdev.hero.lead", i18n);
const h2 = t("webdev.hero.h2", i18n);
const p1 = t("webdev.hero.p1", i18n);
const li1 = t("webdev.hero.li1", i18n);
const li2 = t("webdev.hero.li2", i18n);
const li3 = t("webdev.hero.li3", i18n);
const p2 = t("webdev.hero.p2", i18n);
---

<main class="max-w-7xl mx-auto px-4 py-20 text-neutral-800 bg-white">
  <h1 class="text-5xl font-bold mb-10 text-center text-[#FF8A00]">
    {title}
  </h1>
  <p class="text-xl text-center max-w-3xl mx-auto mb-16">
    {lead}
  </p>

  <div class="grid md:grid-cols-2 gap-12 items-center">
    <div class="space-y-6">
      <h2 class="text-3xl font-bold text-neutral-800">
        {h2}
      </h2>
      <p class="text-neutral-600 leading-relaxed">
        {p1}
      </p>
      <ul class="space-y-3">
        <li class="flex items-center gap-3">
          <svg
            class="w-6 h-6 text-[#FF8A00]"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M5 13l4 4L19 7"></path></svg
          >
          <span class="text-neutral-700">{li1}</span>
        </li>
        <li class="flex items-center gap-3">
          <svg
            class="w-6 h-6 text-[#FF8A00]"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M5 13l4 4L19 7"></path></svg
          >
          <span class="text-neutral-700">{li2}</span>
        </li>
        <li class="flex items-center gap-3">
          <svg
            class="w-6 h-6 text-[#FF8A00]"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M5 13l4 4L19 7"></path></svg
          >
          <span class="text-neutral-700">{li3}</span>
        </li>
      </ul>
      <p class="text-neutral-600 leading-relaxed" set:html={p2} />
    </div>
    <div
      class="bg-orange-50 rounded-2xl p-8 flex items-center justify-center min-h-75"
    >
      <!-- Placeholder for illustration -->
      <svg
        class="w-32 h-32 text-[#FF8A00] opacity-50"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="1"
          d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
        ></path>
      </svg>
    </div>
  </div>
</main>
