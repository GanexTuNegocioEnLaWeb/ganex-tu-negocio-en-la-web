---
import Layout from "../layouts/Layout.astro";
import { getSupportedLangs, isLang, DEFAULT_LANG, getI18nDict } from "../lib/i18n";

const supported = await getSupportedLangs();
const path = Astro.url.pathname.split("/").filter(Boolean);
const langCandidate = path[0] ?? DEFAULT_LANG;
const lang: string = isLang(langCandidate, supported) ? langCandidate : DEFAULT_LANG;

const i18n = await getI18nDict(lang);

const text = {
  title: i18n?.pages?.['404']?.title || (lang === "es" ? "PÃ¡gina no encontrada" : "Page not found"),
  desc: i18n?.pages?.['404']?.description || (lang === "es" ? "La URL no existe." : "The URL does not exist."),
  back: lang === "es" ? "Volver al inicio" : "Back to home"
};
---
<Layout lang={lang} slug="404">
  <section class="max-w-3xl mx-auto px-4 py-16 text-center">
    <div class="mb-8">
      <div class="text-9xl font-black text-[#FF8A00] mb-4">404</div>
      <h1 class="text-3xl font-bold text-neutral-800 mb-3">{text.title}</h1>
      <p class="text-lg text-neutral-500">{text.desc}</p>
    </div>
    <a 
      href={`/${lang}`}
      class="inline-flex items-center gap-2 px-8 py-4 bg-[#FF8A00] text-white font-bold rounded-2xl hover:bg-[#e67e00] transition-all hover:scale-105 active:scale-95 shadow-lg shadow-orange-200"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      {text.back}
    </a>
  </section>
</Layout>
